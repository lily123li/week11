<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/homeTextView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="学生信息"
        android:textColor="@color/colorPrimaryDark"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <TextView android:id="@+id/stu_name"
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:layout_marginLeft="16dp"
        android:gravity="center_vertical|left"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:text="姓名："      />

    <TextView android:id="@+id/stu_id"
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:layout_marginLeft="16dp"
        android:textColor="@color/colorPrimary"
        android:gravity="center_vertical|left"
        android:textSize="20sp"
        android:text="学号："     />

    <TextView android:id="@+id/stu_grade"
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:layout_marginLeft="16dp"
        android:textColor="@color/colorPrimary"
        android:gravity="center_vertical|left"
        android:textSize="20sp"
        android:text="专业年级："     />

    <TextView android:id="@+id/stu_age"
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:layout_marginLeft="16dp"
        android:textColor="@color/colorPrimary"
        android:gravity="center_vertical|left"
        android:textSize="20sp"
        android:text="年龄："      />

    <TextView android:id="@+id/stu_sex"
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:layout_marginLeft="16dp"
        android:textColor="@color/colorPrimary"
        android:gravity="center_vertical|left"
        android:text="性别："
        android:textSize="20sp"      />

    <TextView android:id="@+id/stu_phone"
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:layout_marginLeft="16dp"
        android:textColor="@color/colorPrimary"
        android:gravity="center_vertical|left"
        android:textSize="20sp"
        android:text="联系电话："     />

    <ImageView
        android:id="@+id/stu_imageView"
        android:layout_width="370dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:scaleType="center"
        android:src="@drawable/pen1"/>

</LinearLayout>
